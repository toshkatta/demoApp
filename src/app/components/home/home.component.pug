.container
    ul.row
        li.col.col-md-3.col-sm-4.col-6(*ngFor='let sneaker of sneakers')
            a(routerLink='/sneaker/{{sneaker.id}}')
                img.rounded.img-fluid(src='{{apiUrl}}/{{sneaker.sneakerImages[3].path}}')
                h4 {{sneaker.brand.name}}
                h5 {{sneaker.name}}
                div {{sneaker.type.name | titlecase}}-top
                div {{sneaker.gender.name | titlecase}}
                div Available sizes
                    //- div(*ngFor='let size of sneaker.sizes') {{size.eu}}
                    p {{sneaker.sizes}}